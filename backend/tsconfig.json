{
    "compilerOptions": {
        "target": "ES2020", // Set the target JavaScript version
        "module": "commonjs", // Set the module system to CommonJS
        "strict": true, // Enable all strict type-checking options
        "esModuleInterop": true, // Enables compatibility with ES modules
        "skipLibCheck": true, // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
        "outDir": "./dist", // Output directory for compiled JavaScript files
        "rootDir": "./src" // Root directory of the source files
    },
    "include": ["src/**/*.ts"], // Include all TypeScript files in the src directory
    "exclude": ["node_modules"] // Exclude the node_modules directory
}
